packages:
   yum:
      gcc-c++: []
      python35-devel: []
      python35-pip: []
      unixODBC: []
      unixODBC-devel: []
      git: []
      freetds: []
commands:
   00_github_ssh:
      command: "ssh-keyscan github.com >> ~/.ssh/known_hosts"
   01_install_redis_using_epel:
      command: |
         sudo yum --enablerepo=epel -y install redis
         sudo sed -i 's/save .*/save ""/g' /etc/redis.conf
         sudo pkill -9 redis-server
         sudo chkconfig redis on
         sudo service redis restart
