files:
   "/etc/cron.d/mycron":
      mode: "000644"
      owner: root
      group: root
      content: |
         */2 * * * * root /usr/local/bin/esmonitor.sh

   "/usr/local/bin/esmonitor.sh":
      mode: "000755"
      owner: root
      group: root
      content: |
         #!/bin/bash

         if ! ps -ef | grep -v grep | grep "esimport sync account" ; then
            /usr/local/bin/esimport sync account --start-date 2017-02-27 &>> /var/log/esimport/account.log &
         fi

         if ! ps -ef | grep -v grep | grep "esimport sync session" ; then
            /usr/local/bin/esimport sync session --start-date 2017-02-27 &>> /var/log/esimport/session.log &
         fi

         exit 0

commands:
   remove_old_cron:
      command: "rm -f /etc/cron.d/*.bak"