files:
   "/etc/cron.d/mycron":
      mode: "000644"
      owner: root
      group: root
      content: |
         */2 * * * * ec2-user /usr/local/bin/esmonitor.sh

   "/usr/local/bin/esmonitor.sh":
      mode: "000755"
      owner: ec2-user
      group: root
      content: |
         #!/bin/bash

         if ps -ef | grep -v grep | grep esimport ; then
            exit 0
         else
            pkill esimport
            esimport sync account --start-date 2015-01-01 &>> /var/log/esimport/account.log &
         fi

         exit 0

commands:
   remove_old_cron:
      command: "rm -f /etc/cron.d/*.bak"